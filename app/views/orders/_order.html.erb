<div id="<%= dom_id order %>">
  <p>
    <u>Order <%= order.id %>:</u>
  </p>

  <p>
    <strong>Customer ID:</strong>
    <%= order.customer_id %>
  </p>

  <p>
    <strong>Customer name:</strong>
    <%= order.customer.name %>
    <%= link_to "(Show this customer)", order.customer %>
  </p>

  <p>
    <strong>Customer email:</strong>
    <%= order.customer.email %>
  </p>

  <p>
    <strong>Total:</strong>
    <%= order.total %>
  </p>

  <p>
    <strong>Order date:</strong>
    <%= order.order_date %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= order.status %>
  </p>

</div>
